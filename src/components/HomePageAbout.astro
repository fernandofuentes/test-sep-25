---
import SpinningCube from "../components/SpinningCube.tsx";
---

<!-- ABOUT -->
<section id="about" aria-labelledby="about-heading" class="overflow-hidden bg-white py-24 sm:py-32">
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <div class="mx-auto grid max-w-2xl grid-cols-1 gap-x-8 gap-y-16 sm:gap-y-20 
                lg:mx-0 lg:max-w-none lg:grid-cols-2 items-center">

      <!-- Copy -->
      <div class="lg:pt-4 lg:pr-8 order-2 lg:order-1">
        <header class="lg:max-w-lg">
          <p class="text-sm font-semibold text-brand-emerald">Unwritten Agency | Think Outside the Box.</p>
          <h2 id="about-heading" class="mt-2 text-4xl sm:text-5xl font-semibold tracking-tight text-gray-900 text-balance">
            A Full-Service Digital Marketing Agency in The Woodlands
          </h2>
          <p class="mt-6 text-lg leading-8 text-gray-700">
            <strong>Unwritten Agency</strong> is a full-service digital marketing and creative studio based in 
            <strong>The Woodlands, Texas</strong>. We partner with brands to deliver high-performing websites, 
            SEO strategies, and bold creative campaigns that help businesses grow locally and nationwide.
          </p>
        </header>
      </div>

      <!-- 3D Cube -->
      <div class="order-1 lg:order-2">
        <SpinningCube client:visible />
      </div>
    </div>
  </div>
</section>
