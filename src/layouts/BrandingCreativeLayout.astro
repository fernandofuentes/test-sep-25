---
import '@tailwindplus/elements';
import "../styles/global.css";
import GlobalCTA from '../components/GlobalCTA.astro'
import GlobalFooter from '../components/GlobalFooter.astro'
---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preload" as="video" href="/videos/graphic-design.mp4" type="video/mp4" fetchpriority="high">
		<meta name="generator" content={Astro.generator} />
		<title>Branding & Creative - Unwritten Agency | Logo Design & Brand Identity</title>
		<meta name="description" content="Professional branding and creative services in The Woodlands, Texas. Logo design, brand identity, and creative campaigns that make your business unforgettable." />
	</head>
	<body>
		<slot />
    <GlobalCTA />
    <GlobalFooter />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>