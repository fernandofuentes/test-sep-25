---
import '@tailwindplus/elements';
import "../styles/global.css";
import GlobalCTA from '../components/GlobalCTA.astro'
import GlobalFooter from '../components/GlobalFooter.astro'
---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Contact Us - Unwritten Agency | Get Started Today</title>
		<meta name="description" content="Ready to grow your business? Contact Unwritten Agency in The Woodlands, Texas for digital marketing, web design, and creative services." />
	</head>
	<body>
		<slot />
		<GlobalCTA />
		<GlobalFooter />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>