---
import '@tailwindplus/elements';
import "../styles/global.css";
import GlobalCTA from '../components/GlobalCTA.astro'
import GlobalFooter from '../components/GlobalFooter.astro'
---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preload" as="video" href="/videos/web-development.mp4" type="video/mp4" fetchpriority="high">
		<meta name="generator" content={Astro.generator} />
		<title>Email & Automation - Unwritten Agency | Email Marketing & Marketing Automation</title>
		<meta name="description" content="Expert email marketing and automation services in The Woodlands, Texas. Automated campaigns that nurture leads and drive conversions." />
	</head>
	<body>
		<slot />
    <GlobalCTA />
    <GlobalFooter />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>